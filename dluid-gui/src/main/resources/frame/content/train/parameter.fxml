<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="itself" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <!--============================================================= Titled =============================================================-->
        <TitledPane fx:id="titledPane" animated="false" text="학습 파라미터" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <GridPane hgap="5.0" vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150" minWidth="130" prefWidth="140" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="80" prefWidth="240" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!--============================================================= Training param =============================================================-->
                                <Label fx:id="labelWeightInit" text="기본 초기화 : " GridPane.rowIndex="0" />
                                <Label fx:id="labelOptimizer" text="학습 방법 : " GridPane.rowIndex="1" />
                                <Label fx:id="labelLearningRate" text="학습 속도 : " GridPane.rowIndex="2" />
                                <Label fx:id="labelBatchSize" text="학습 단위 : " GridPane.rowIndex="3" />
                                <Label fx:id="labelEpoch" text="반복 학습 : " GridPane.rowIndex="4" />
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <MenuButton fx:id="menuButtonWeightInit" styleClass="customMenuButton" mnemonicParsing="false" text="" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <items>
                                            </items>
                                        </MenuButton>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" top="5.0" />
                                    </padding>
                                </AnchorPane>
                                <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <MenuButton fx:id="menuButtonOptimizer" styleClass="customMenuButton" mnemonicParsing="false" text="" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <items>
                                            </items>
                                        </MenuButton>
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" top="5.0" />
                                    </padding>
                                </AnchorPane>
                                <TextField fx:id="textFieldLearningRate" promptText="0.1" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <padding>
                                        <Insets bottom="5.0" top="5.0" />
                                    </padding>
                                </TextField>
                                <TextField fx:id="textFieldBatchSize" promptText="32" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <padding>
                                        <Insets bottom="5.0" top="5.0" />
                                    </padding>
                                </TextField>
                                <TextField fx:id="textFieldEpoch" promptText="100" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <padding>
                                        <Insets bottom="5.0" top="5.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </TitledPane>

    </children>
</AnchorPane>
