                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                             <children>
                                 <Label fx:id="labelTestProgress" text="테스트 기록">
                                     <VBox.margin>
                                         <Insets />
                                     </VBox.margin>
                                     <padding>
                                         <Insets bottom="10.0" />
                                     </padding>
                                 </Label>
                                 <AnchorPane prefHeight="100.0" prefWidth="200.0">
                                     <children>
                                         <TextArea fx:id="textAreaTestLog" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                     </children>
                                     <padding>
                                         <Insets bottom="10.0" />
                                     </padding>
                                 </AnchorPane>
                                 <AnchorPane>
