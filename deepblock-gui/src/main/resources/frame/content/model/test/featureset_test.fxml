                                     <VBox.margin>
                                         <Insets />
                                     </VBox.margin>
                                     <padding>
                                         <Insets bottom="10.0" />
                                     </padding>
                                 </AnchorPane>


                                 <HBox alignment="TOP_RIGHT" prefWidth="200.0">
                                     <children>
                                         <Button fx:id="buttonTest" mnemonicParsing="false" text="테스트">
                                             <HBox.margin>
                                                 <Insets left="5.0" />
                                             </HBox.margin>
                                         </Button>
                                     </children>
                                     <VBox.margin>
                                         <Insets />
                                     </VBox.margin>
                                 </HBox>
                             </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
            <padding>
                <Insets bottom="20.0" />
